<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scottlogic.honesty-store" version="1.0.0" ios-CFBundleVersion="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>honesty.store</name>
    <description>
        The mobile app for honesty.store
    </description>
    <author email="sburnstone@scottlogic.com" href="http://honesty.store">
        honesty.store team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://*.honesty.store/*" />
    <allow-navigation href="https://honesty.store/*" />
    <allow-intent href="https://honesty.store/*" />
    <allow-intent href="https://*.honesty.store/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
</widget>
