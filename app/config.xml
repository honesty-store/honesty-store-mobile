<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scottlogic.honesty-store" ios-CFBundleVersion="1" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>honesty.store</name>
    <description>
        The mobile app for honesty.store
    </description>
    <author email="sburnstone@scottlogic.com" href="http://honesty.store">
        honesty.store team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://*.honesty.store/*" />
    <allow-navigation href="https://honesty.store/*" />
    <allow-intent href="https://honesty.store/*" />
    <allow-intent href="https://*.honesty.store/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/icons/icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/icons/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icons/icon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/icons/icon-76.png" width="76" />
        <icon height="152" src="res/ios/icons/icon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/icons/icon-small-40.png" width="40" />
        <icon height="80" src="res/ios/icons/icon-small-40@2x.png" width="80" />
        <icon height="72" src="res/ios/icons/icon-72.png" width="72" />
        <icon height="144" src="res/ios/icons/icon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/icons/icon-small.png" width="29" />
        <icon height="58" src="res/ios/icons/icon-small@2x.png" width="58" />
        <icon height="50" src="res/ios/icons/icon-50.png" width="50" />
        <icon height="100" src="res/ios/icons/icon-50@2x.png" width="100" />
        <icon height="167" src="res/ios/icons/icon-83.5@2x.png" width="167" />
        <splash height="480" src="res/ios/splash/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="res/ios/splash/screen-iphone-portrait@2x.png" width="640" />
        <splash height="1136" src="res/ios/splash/screen-iphone-568h@2x.png" width="640" />
        <splash height="2208" src="res/ios/splash/screen-iphone-2208-1242.png" width="1242" />
        <splash height="1334" src="res/ios/splash/screen-iphone-1334-750.png" width="750" />
    </platform>
    <universal-links>
        <host name="honesty.store" scheme="https" />
    </universal-links>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#14415F" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-targe" value="8.0" />
    <preference name="Orientation" value="portrait" />
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.1" />
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.5" />
    <plugin name="cordova-plugin-ios-no-export-compliance" spec="https://github.com/mikaoelitiana/cordova-plugin-ios-no-export-compliance.git" />
</widget>
